{
  "hosting": {
    "public": "dist", // Replace "dist" with your build output directory
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/templates/index.html"
      }
    ],
    "source": "https://github.com/<your-github-username>/<your-repo-name>.git" // This is the key!
  }
}